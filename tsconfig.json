{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    // Use strict for future-proofing and performance benefits
    // http://stackoverflow.com/a/31395185
    "alwaysStrict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "lib": [
      "es2017.object",
      "es6",
      "es7"
    ],
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}